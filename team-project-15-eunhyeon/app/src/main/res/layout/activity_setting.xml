<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#ffffff"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_margin="18dp"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/previousBtn"
            android:src="@drawable/previous_btn"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:text="환경 설정"
            android:textSize="18dp"
            android:textStyle="bold"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_marginTop="6dp"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="24dp"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:background="@drawable/rounded_outline_button_background">
            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="32dp"
                android:id="@+id/profileImg"
                android:src="@drawable/ic_launcher_foreground"
                android:background="@drawable/id_circle"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/profileImg"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="32dp"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="24dp"
                    android:text="사용자"
                    android:textSize="16dp"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="16dp"
                    android:textSize="12dp"
                    android:text="hello@kw.ac.kr"
                    android:textColor="#ACACAC"/>
            </LinearLayout>

        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="24dp"
            android:layout_marginTop="32dp"
            android:layout_marginLeft="24dp"
            android:layout_marginBottom="12dp"
            android:text="계정"
            android:textSize="18dp"
            android:textStyle="bold"/>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="62dp"
            android:id="@+id/accountBtn"
            android:src="@drawable/account_btn"/>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="62dp"
            android:id="@+id/alarmBtn"
            android:src="@drawable/alarm_btn"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="24dp"
            android:layout_marginTop="16dp"
            android:layout_marginLeft="24dp"
            android:layout_marginBottom="12dp"
            android:text="세부 설정"
            android:textSize="18dp"
            android:textStyle="bold"/>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="62dp"
            android:id="@+id/sensorBtn"
            android:src="@drawable/sensor_btn"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="24dp"
            android:layout_marginTop="16dp"
            android:layout_marginLeft="24dp"
            android:layout_marginBottom="12dp"
            android:text="기타"
            android:textSize="18dp"
            android:textStyle="bold"/>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="62dp"
            android:id="@+id/reviewBtn"
            android:src="@drawable/review_btn"/>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="62dp"
            android:id="@+id/helpBtn"
            android:src="@drawable/help_btn"/>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:text="로그아웃"
            android:textColor="#ACACAC"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"/>
    </RelativeLayout>


</LinearLayout>